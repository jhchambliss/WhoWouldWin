<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="9dp"
    tools:layout_editor_absoluteY="34dp">

    <TextView
        android:id="@+id/variableOneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/variableOneTextView"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="@+id/variableOneTextBox"
        app:layout_constraintStart_toStartOf="@+id/contestantOneTextView" />

    <TextView
        android:id="@+id/variableTwoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/variableTwoTextView"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="@+id/variableTwoTextBox"
        app:layout_constraintStart_toStartOf="@+id/variableOneTextView" />

    <TextView
        android:id="@+id/setContestantsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="585dp"
        android:gravity="center|center_horizontal"
        android:text="@string/setContestantsTextView"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/setVariablesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="347dp"
        android:gravity="center"
        android:text="@string/setVariablesTextView"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/contestantOneTextBox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/contestantOneTextView"
        app:layout_constraintTop_toBottomOf="@+id/setContestantsTextView" />

    <EditText
        android:id="@+id/contestantTwoTextBox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/contestantOneTextBox"
        app:layout_constraintTop_toBottomOf="@+id/contestantOneTextBox" />

    <EditText
        android:id="@+id/variableOneTextBox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/contestantTwoTextBox"
        app:layout_constraintTop_toBottomOf="@+id/setVariablesTextView" />

    <EditText
        android:id="@+id/variableTwoTextBox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/variableOneTextBox"
        app:layout_constraintTop_toBottomOf="@+id/variableOneTextBox" />

    <EditText
        android:id="@+id/variableThreeTextBox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/variableTwoTextBox"
        app:layout_constraintTop_toBottomOf="@+id/variableTwoTextBox" />

    <TextView
        android:id="@+id/variableThreeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/variableThreeTextView"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="@+id/variableThreeTextBox"
        app:layout_constraintStart_toStartOf="@+id/variableTwoTextView" />

    <TextView
        android:id="@+id/contestantOneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:text="Contestant 1:"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="@+id/contestantOneTextBox"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/contestantTwoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Contestant 2:"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="@+id/contestantTwoTextBox"
        app:layout_constraintStart_toStartOf="@+id/contestantOneTextView" />

    <Button
        android:id="@+id/submitNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="572dp"
        android:text="@string/submitVariables"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/mostImportantSpinner"
        android:layout_width="144dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@color/colorAccent"
        android:entries="@array/mostImportantArray"
        android:popupBackground="@color/colorAccent"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="@+id/leastImportantSpinner"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/leastImportantSpinner"
        android:layout_width="144dp"
        android:layout_height="38dp"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorAccent"
        android:entries="@array/leastImportantArray"
        android:popupBackground="@color/colorAccent"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/mostImportantSpinner"
        app:layout_constraintTop_toBottomOf="@+id/leastImportantTextView" />

    <TextView
        android:id="@+id/mostImportantTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:text="@string/mostImportantTextView"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="@+id/leastImportantTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/leastImportantTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="24dp"
        android:text="@string/leastImportantTextView"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/mostImportantTextView"
        app:layout_constraintTop_toBottomOf="@+id/yesCheckBox" />

    <TextView
        android:id="@+id/rankTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="@string/rankTextView"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="@+id/yesCheckBox"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/yesCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/yesCheckBox"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/rankTextView"
        app:layout_constraintTop_toBottomOf="@+id/variableThreeTextBox" />

</androidx.constraintlayout.widget.ConstraintLayout>